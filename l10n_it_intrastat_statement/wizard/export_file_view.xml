<odoo>
    <record id="wizard_account_intrastat_export_file" model="ir.ui.view">
        <field name="name">Export Intrastat File</field>
        <field name="model">account.intrastat.export.file</field>
        <field name="arch" type="xml">
            <form string="Export Intrastat File">
                <field invisible="1" name="state" />
                <field name="name" invisible="1" />
                <div invisible="[('state', 'not in', [&quot;'get'&quot;])]">
                    <h2>Export Complete</h2>
                    <p>Here is the exported file: <field name="data" readonly="1" filename="name" /></p>
                </div>
                <footer invisible="[('state', 'not in', [&quot;'choose'&quot;])]">
                    <button name="act_getfile" string="Export submission file" type="object" class="oe_highlight" context="{'export_without_head': 0, 'purchase': True, 'sale': True}" /> or
                    <button name="act_getfile" string="Export acquisti.cee" type="object" class="oe_highlight" context="{'export_without_head': 1, 'export_filename': 'SCAMBI.CEE', 'purchase': True, 'sale': False}" /> or
                    <button name="act_getfile" string="Export cessioni.cee" type="object" class="oe_highlight" context="{'export_without_head': 1, 'export_filename': 'SCAMBI.CEE', 'purchase': False, 'sale': True}" /> or
                    <button special="cancel" string="Cancel" type="object" class="oe_link" />
                </footer>
                <footer invisible="[('state', 'not in', [&quot;'get'&quot;])]">
                    <button special="cancel" string="Close" type="object" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_wizard_wizard_account_intrastat_export_file" model="ir.actions.act_window">
        <field name="name">Export Intrastat File</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.intrastat.export.file</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="wizard_account_intrastat_export_file" />
        <field name="target">new</field>
    </record>

</odoo>