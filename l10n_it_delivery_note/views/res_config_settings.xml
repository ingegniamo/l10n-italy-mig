<odoo>

    <record id="res_config_settings_form_view" model="ir.ui.view">
        <field name="name">res.config.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//app[@name='stock']/block[1]" position="after">
                <block title="Delivery Notes" name="delivery_notes">
                    <setting help="It extends the standard behaviour of DNs management by introducing additional functions.(e.g. link multiple pickings to a single DN)">
                        <field name="group_use_advanced_delivery_notes"/>
                      
                    </setting>
                    <setting help="Select the root of all your virtual locations. Internal transfers between at least one virtual locations won't generate automatically any DN documents.">
                        <field name="virtual_locations_root"/>
                      


                    </setting>

                </block>
            </xpath>
        </field>
    </record>

</odoo>
