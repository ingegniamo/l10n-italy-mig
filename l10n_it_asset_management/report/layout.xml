<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template id="document_layout">
        <!-- Multicompany -->
           <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>

        <div class="header">
            <div class="row">
                <div class="col-3 mb4">
                    <h3>
                        <span t-esc="company.name"/>
                    </h3>
                </div>
                <div class="col-9 text-end">
                    <span t-esc="company.street" class=""/>
                    <br/>
                    <span t-esc="company.zip" class=""/> - <span t-esc="company.city" class=""/> - <span t-esc="company.state_id.code" class=""/>
                    <br/>
                    <span class="text-right"><t t-esc="company.country_id.vat_label or 'TIN'"/>: </span><span t-esc="company.partner_id.vat" class=""/>
                    <br/>
                </div>
            </div>
        </div>

        <div class="article">
            <link href="/l10n_it_asset_management/static/src/css/report.css" rel="stylesheet"/>
            <t t-out="0"/>
        </div>

        <div class="footer">
           <div class="text-center" style="border-top: 1px solid black;">
                <ul class="list-inline mb4">
                    <div t-field="company.report_footer"/>
                </ul>

                <div t-if="report_type == 'pdf'" class="text-muted">
                    Page: <span class="page"/> / <span class="topage"/>
                </div>
                <div t-if="report_type == 'pdf' and display_name_in_footer" class="text-muted">
                    <span t-field="o.name"/>
                </div>
            </div>
        </div>
    </template>

</odoo>
