<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template id="document_layout">
         <!-- Multicompany -->
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>

        <div class="header">
            <div class="row">
                <div class="col-6">
                    <h3>
                        <span t-esc="company.name"/>
                    </h3>
                </div>
                <div class="col-6 pull-right text-right" style="text-align: right;">
                    <span t-esc="company.street" class=""/>
                    <br/>
                    <span t-esc="company.zip" class=""/> - <span t-esc="company.city" class=""/> - <span t-esc="company.state_id.code" class=""/>
                    <br/>
                    <span class="text-right"><t t-esc="company.country_id.vat_label or 'TIN'"/>: </span><span t-esc="company.partner_id.vat" class=""/>
                    <br/>
                </div>
            </div>
        </div>

        <div class="article">
            <link href="/l10n_it_asset_management/static/src/css/report.css" rel="stylesheet"/>
            <t t-raw="0"/>
        </div>

        <div class="footer">
            <div class="row text-muted">
                <div class="col-6 custom_footer">
                    <span t-esc="' '"/>
                </div>
                <div class="col-6 text-right custom_footer" style="text-align: right;">
                    <ul class="list-inline">
                        <t>
                            <t t-if="o.report_footer_year"><span t-esc="o.report_footer_year"/></t>
                            <t t-else=""><span class="page"/></t>
                        </t>
                        <t>/</t>
                        <t>
                            <t t-if="o.report_footer_year"><span class="page"/></t>
                            <t t-else=""><span class="topage"/></t>
                        </t>
                    </ul>
                </div>
            </div>
        </div>
    </template>

</odoo>
